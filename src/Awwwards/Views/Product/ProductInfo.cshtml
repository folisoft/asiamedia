@model Awwwards.Models.ProjectModel

    <div class="title">
        <div class="box-left">
            <h1 class="heading-medium">@Model.Name</h1>
        </div>
        <div class="box-right">
            <div class="time">
                <div class="item">
                    <strong>6</strong> DAYS
                </div>
                <div class="item">
                    <strong>0</strong> HOURS
                </div>
                <div class="item">
                    <strong>34</strong> MIN
                </div>
                <svg class="ico-svg" viewbox="0 0 14 14">
                    <use xlink:href="https://www.awwwards.com/assets/images/sprite-icons.svg#clock"></use>
                </svg>

            </div>
        </div>
    </div>
    <p>
        by <strong>

            <a href="@Url.Action("Index","Home")">@Model.Author.Name</a>
        </strong> (@Model.Author.Location)
    </p>

    <div class="read-more">
        @Model.Description
    </div>

    <div class="list-tags">
        <ul>
            <li><a href="@Url.Action("Index","Home")" class="item">Technology</a></li>
            <li><a href="@Url.Action("Index","Home")" class="item">Web & Interactive</a></li>
            <li><a href="@Url.Action("Index","Home")" class="item">Experimental</a></li>
            <li><a href="@Url.Action("Index","Home")" class="item">Clean</a></li>
            <li><a href="@Url.Action("Index","Home")" class="item">Fullscreen</a></li>
            <li><a href="@Url.Action("Index","Home")" class="item">Data Visualization</a></li>
            <li><a href="@Url.Action("Index","Home")" class="item">3D</a></li>
            <li><a href="@Url.Action("Index","Home")" class="item">Microinteractions</a></li>
            <li><a href="@Url.Action("Index","Home")" class="item">WebGL</a></li>
            <li><a href="@Url.Action("Index","Home")" class="item item-color black">sites</a></li>
            <li><a href="@Url.Action("Index","Home")" class="item item-color green">sites</a></li>
            <li><a href="@Url.Action("Index","Home")" class="item item-color yellow">sites</a></li>
        </ul>
    </div>
